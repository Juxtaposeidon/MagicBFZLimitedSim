<%= javascript_include_tag 'drafting/draftpage.js'%>

<div class = "cards">
<div id = "cardhighlight"></div>
<h3>Battle for Zendikar Draft</h3>
<br>
<div class = "selector">
<%@startingpack.each do |card|%>
<%=link_to image_tag("#{card.id}.jpg", :border=>0), "Select", id: card.id %>
<%end%>
</div>
</div>
<div id="pool">
  <table>
    <tr>
      <td class = "pooltd">
        <div id="draftedcards">
          <h3 id="pooltitle">Card pool</h3>
          <h4>Pack 1</h4>
        </div>
      </td>
    </tr>
    <tr>
      <td class = "pooltd">
        <div id="draftedcards2">
          <h4>Pack 2</h4>
        </div>
      </td>
    </tr>
    <tr>
      <td class = "pooltd">
        <div id="draftedcards3">
          <h4>Pack 3</h4>
        </div>
      </td>
    </tr>
</div>